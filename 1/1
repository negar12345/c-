
using System;

class Program
{
    static void Main()
    {
        double r, c, a;
        Console.Write("Enter the radius: ");
        r = Convert.ToDouble(Console.ReadLine());

        c = 2 * Math.PI * r;
        a = Math.PI * Math.Pow(r, 2);

        Console.WriteLine("mohit: " + c);
        Console.WriteLine("masahat: " + a);
        Console.ReadKey();
    }
}
